@model DistribuidorViewModel
@{
    ViewData["Title"] = "Registro de Distribuidor - FacturaFácil.net";
}

<!-- Hero Section -->
<section class="hero-section-small">
    <div class="container">
        <h1 class="display-4 fw-bold text-center">Registro de Distribuidor</h1>
        <p class="lead text-center">Completa el formulario y nos pondremos en contacto contigo</p>
    </div>
</section>

<!-- Formulario Section -->
<section class="form-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="form-card">
                    <form asp-controller="Distribuidores" asp-action="Registro" method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Nombre" class="form-label">Nombre Completo *</label>
                                <input asp-for="Nombre" class="form-control" placeholder="Tu nombre completo" required>
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">Email *</label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="tu@email.com" required>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Telefono" class="form-label">Teléfono *</label>
                                <input asp-for="Telefono" class="form-control" placeholder="(55) 1234-5678" required>
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Empresa" class="form-label">Empresa</label>
                                <input asp-for="Empresa" class="form-control" placeholder="Nombre de tu empresa">
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Ciudad" class="form-label">Ciudad *</label>
                                <input asp-for="Ciudad" class="form-control" placeholder="Tu ciudad" required>
                                <span asp-validation-for="Ciudad" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Estado" class="form-label">Estado *</label>
                                <select asp-for="Estado" class="form-select" required>
                                    <option value="">Selecciona un estado</option>
                                    <option value="Aguascalientes">Aguascalientes</option>
                                    <option value="Baja California">Baja California</option>
                                    <option value="Baja California Sur">Baja California Sur</option>
                                    <option value="Campeche">Campeche</option>
                                    <option value="Chiapas">Chiapas</option>
                                    <option value="Chihuahua">Chihuahua</option>
                                    <option value="CDMX">Ciudad de México</option>
                                    <option value="Coahuila">Coahuila</option>
                                    <option value="Colima">Colima</option>
                                    <option value="Durango">Durango</option>
                                    <option value="Guanajuato">Guanajuato</option>
                                    <option value="Guerrero">Guerrero</option>
                                    <option value="Hidalgo">Hidalgo</option>
                                    <option value="Jalisco">Jalisco</option>
                                    <option value="México">Estado de México</option>
                                    <option value="Michoacán">Michoacán</option>
                                    <option value="Morelos">Morelos</option>
                                    <option value="Nayarit">Nayarit</option>
                                    <option value="Nuevo León">Nuevo León</option>
                                    <option value="Oaxaca">Oaxaca</option>
                                    <option value="Puebla">Puebla</option>
                                    <option value="Querétaro">Querétaro</option>
                                    <option value="Quintana Roo">Quintana Roo</option>
                                    <option value="San Luis Potosí">San Luis Potosí</option>
                                    <option value="Sinaloa">Sinaloa</option>
                                    <option value="Sonora">Sonora</option>
                                    <option value="Tabasco">Tabasco</option>
                                    <option value="Tamaulipas">Tamaulipas</option>
                                    <option value="Tlaxcala">Tlaxcala</option>
                                    <option value="Veracruz">Veracruz</option>
                                    <option value="Yucatán">Yucatán</option>
                                    <option value="Zacatecas">Zacatecas</option>
                                </select>
                                <span asp-validation-for="Estado" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Mensaje" class="form-label">Cuéntanos sobre tu experiencia</label>
                                <textarea asp-for="Mensaje" class="form-control" rows="4" placeholder="Cuéntanos sobre tu experiencia en ventas, tu mercado objetivo, etc."></textarea>
                            </div>
                            <div class="col-12">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="terminos" required>
                                    <label class="form-check-label" for="terminos">
                                        Acepto los <a href="#">términos y condiciones</a> y la <a href="#">política de privacidad</a>
                                    </label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-custom btn-primary-custom btn-lg w-100">
                                    <i class="bi bi-send me-2"></i>Enviar Solicitud
                                </button>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="info-box mt-4">
                    <h5><i class="bi bi-info-circle me-2"></i>¿Qué sigue después del registro?</h5>
                    <ol>
                        <li>Revisaremos tu solicitud en un plazo de 24-48 horas</li>
                        <li>Te contactaremos para una entrevista inicial</li>
                        <li>Te enviaremos el contrato y documentación necesaria</li>
                        <li>Recibirás capacitación completa sobre nuestros productos</li>
                        <li>¡Comenzarás a vender y generar ingresos!</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
