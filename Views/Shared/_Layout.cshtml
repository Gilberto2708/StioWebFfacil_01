<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FacturaFácil.net</title>

   

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- SCRIPT CRÍTICO: Aplicar tema ANTES del renderizado -->
    <script>
        (function() {
            const savedTheme = localStorage.getItem('theme') || 'default';
            document.body.setAttribute('data-theme', savedTheme);
        })();
    </script>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <span class="brand-highlight">factura</span>fácil<span class="brand-highlight">.net</span>
                <small>lo hacemos sencillo para ti</small>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Productos" asp-action="Index">
                            PRODUCTOS
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Distribuidores" asp-action="Index">DISTRIBUIDORES</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Precios" asp-action="Index">PRECIOS</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link"  asp-controller="Nosotros" asp-action="Index">
                            NOSOTROS
                        </a>                      
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Contacto" asp-action="Index">CONTÁCTANOS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="https://cobe73.com/" target="_blank" rel="noopener">INICIAR SESIÓN</a>
                    </li>
                    <!-- Theme Switcher Button -->
                    <li class="nav-item">
                        <button class="nav-link btn-theme-toggle" id="themeToggle" title="Cambiar tema" style="padding-top: 4px !important">
                            <i class="bi bi-gear-fill"></i>
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <h5>Productos</h5>
                    <ul>
                        <li><a asp-controller="Productos" asp-action="Index" asp-fragment="facturacion">Facturación</a></li>
                        <li><a asp-controller="Productos" asp-action="Index" asp-fragment="nomina">Nómina</a></li>
                        <li><a asp-controller="Productos" asp-action="Index" asp-fragment="carta-porte">Carta Porte</a></li>
                        <li><a asp-controller="Productos" asp-action="Index" asp-fragment="respaldos">Respaldos</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>Empresa</h5>
                    <ul>
                        <li><a asp-controller="Nosotros" asp-action="Index">Nosotros</a></li>
                        <li><a asp-controller="Distribuidores" asp-action="Index">Distribuidores</a></li>
                        <li><a asp-controller="Precios" asp-action="Index">Precios</a></li>
                        <li><a asp-controller="Home" asp-action="Blog">Blog</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>Soporte</h5>
                    <ul>
                        <li><a asp-controller="Home" asp-action="Ayuda">Centro de Ayuda</a></li>
                        <li><a asp-controller="Home" asp-action="Tutoriales">Tutoriales</a></li>
                        <li><a asp-controller="Contacto" asp-action="Index">Contacto</a></li>
                        <li><a asp-controller="Home" asp-action="FAQ">FAQ</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>Síguenos</h5>
                    <ul>
                        <li><a href="#"><i class="bi bi-facebook"></i> Facebook</a></li>
                        <li><a href="#"><i class="bi bi-twitter"></i> Twitter</a></li>
                        <li><a href="#"><i class="bi bi-linkedin"></i> LinkedIn</a></li>
                        <li><a href="#"><i class="bi bi-youtube"></i> YouTube</a></li>
                    </ul>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2025 FacturaFácil.net - Todos los derechos reservados</p>
            </div>
        </div>
    </footer>

    <!-- Chat Button -->
    <div class="chat-button" id="chatButton" title="Chatea con nosotros por WhatsApp">
        <i class="bi bi-whatsapp"></i>
    </div>

    <!-- Theme Selector Modal -->
    <div class="modal fade" id="themeModal" tabindex="-1" aria-labelledby="themeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="themeModalLabel">
                        <i class="bi bi-palette-fill me-2"></i>Selecciona tu tema
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="theme-option" data-theme="default">
                                <div class="theme-preview theme-preview-default">
                                    <div class="theme-preview-header"></div>
                                    <div class="theme-preview-body"></div>
                                </div>
                                <h6 class="text-center mt-2">Tema Azul</h6>
                                <p class="text-center text-muted small">Tema predeterminado</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="theme-option" data-theme="light">
                                <div class="theme-preview theme-preview-light">
                                    <div class="theme-preview-header"></div>
                                    <div class="theme-preview-body"></div>
                                </div>
                                <h6 class="text-center mt-2">Tema Claro</h6>
                                <p class="text-center text-muted small">Tema corporativo</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>