@model ContactoViewModel

@{
    ViewData["Title"] = "Contacto - FacturaFácil.net";
}

<!-- Hero Section -->
<section class="hero-section-small">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12 text-center">
                <h1 class="display-4 fw-bold">Contáctanos</h1>
                <p class="lead">Estamos aquí para ayudarte. Envíanos tu mensaje y te responderemos pronto.</p>
            </div>
        </div>
    </div>
</section>

<!-- Contacto Section -->
<section class="contacto-section">
    <div class="container">
        <div class="row g-4">

            <!-- Formulario de Contacto -->
            <div class="col-lg-8">
                <div class="contacto-form-card">
                    <h3 class="mb-4">Envíanos un Mensaje</h3>

                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>
                            <strong>¡Mensaje enviado!</strong> Nos pondremos en contacto contigo pronto.
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Index" method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Nombre" class="form-label">Nombre Completo *</label>
                                <input asp-for="Nombre" class="form-control" placeholder="Tu nombre completo" required />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Empresa" class="form-label">Empresa</label>
                                <input asp-for="Empresa" class="form-control" placeholder="Nombre de tu empresa" />
                                <span asp-validation-for="Empresa" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">Correo Electrónico *</label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="tu@email.com" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Telefono" class="form-label">Teléfono *</label>
                                <input asp-for="Telefono" type="tel" class="form-control" placeholder="(555) 123-4567" required />
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="TipoConsulta" class="form-label">Tipo de Consulta *</label>
                                <select asp-for="TipoConsulta" class="form-select" required>
                                    <option value="">Selecciona una opción</option>
                                    <option value="Ventas">Información de Ventas</option>
                                    <option value="Soporte">Soporte Técnico</option>
                                    <option value="Distribuidor">Ser Distribuidor</option>
                                    <option value="Demo">Solicitar Demo</option>
                                    <option value="Otro">Otro</option>
                                </select>
                                <span asp-validation-for="TipoConsulta" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ProductoInteres" class="form-label">Producto de Interés</label>
                                <select asp-for="ProductoInteres" class="form-select">
                                    <option value="">Selecciona un producto</option>
                                    <option value="COBE73 START">COBE73 START</option>
                                    <option value="COBE73 HALF">COBE73 HALF</option>
                                    <option value="COBE73 FULL">COBE73 FULL</option>
                                    <option value="Nómina">Nómina Electrónica</option>
                                    <option value="Carta Porte">Carta Porte</option>
                                    <option value="Otro">Otro</option>
                                </select>
                                <span asp-validation-for="ProductoInteres" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Mensaje" class="form-label">Mensaje *</label>
                                <textarea asp-for="Mensaje" class="form-control" rows="5" placeholder="Cuéntanos cómo podemos ayudarte..." required></textarea>
                                <span asp-validation-for="Mensaje" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <div class="form-check">
                                    <input asp-for="AceptaPrivacidad" class="form-check-input" type="checkbox" required />
                                    <label asp-for="AceptaPrivacidad" class="form-check-label">
                                        Acepto el <a href="#" data-bs-toggle="modal" data-bs-target="#privacidadModal">Aviso de Privacidad</a> *
                                    </label>
                                    <span asp-validation-for="AceptaPrivacidad" class="text-danger d-block"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <button type="submit" class="btn btn-custom btn-primary-custom btn-lg w-100">
                                    <i class="bi bi-send-fill me-2"></i>Enviar Mensaje
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Información de Contacto -->
            <div class="col-lg-4">

                <!-- Datos de Contacto -->
                <div class="info-contacto-card mb-4">
                    <h4 class="mb-4">Información de Contacto</h4>

                    <div class="contacto-item">
                        <div class="contacto-item-icon">
                            <i class="bi bi-geo-alt-fill"></i>
                        </div>
                        <div class="contacto-item-content">
                            <h5>Dirección</h5>
                            <p>GUADALUPE VICTORIA NO. 28 PONIENTE<br>Col. Centro, Los Mochis<br>C.P. 81200</p>
                        </div>
                    </div>

                    <div class="contacto-item">
                        <div class="contacto-item-icon">
                            <i class="bi bi-telephone-fill"></i>
                        </div>
                        <div class="contacto-item-content">
                            <h5>Teléfono</h5>
                            <p>
                                <a href="tel:+525555551234">(662) 1180415</a><br>
                                <a href="tel:+525555555678">(668) 8115110</a>
                            </p>
                        </div>
                    </div>

                    <div class="contacto-item">
                        <div class="contacto-item-icon">
                            <i class="bi bi-envelope-fill"></i>
                        </div>
                        <div class="contacto-item-content">
                            <h5>Email</h5>
                            <p>
                                <a href="mailto:info@facturafacil.net">info@facturafacil.net</a><br>
                                <a href="mailto:facturacion@facturafacil.net">facturacion@facturafacil.net</a>
                            </p>
                        </div>
                    </div>

                    <div class="contacto-item">
                        <div class="contacto-item-icon">
                            <i class="bi bi-clock-fill"></i>
                        </div>
                        <div class="contacto-item-content">
                            <h5>Horario</h5>
                            <p>Lunes a Viernes<br>9:00 AM - 6:00 PM</p>
                        </div>
                    </div>
                </div>

                <!-- Redes Sociales -->
                <div class="redes-sociales-card mb-4">
                    <h4 class="mb-3">Síguenos</h4>
                    <div class="social-links">
                        <a href="#" class="social-link facebook" title="Facebook">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="#" class="social-link twitter" title="Twitter">
                            <i class="bi bi-twitter-x"></i>
                        </a>
                        <a href="#" class="social-link linkedin" title="LinkedIn">
                            <i class="bi bi-linkedin"></i>
                        </a>
                        <a href="#" class="social-link youtube" title="YouTube">
                            <i class="bi bi-youtube"></i>
                        </a>
                        <a href="#" class="social-link whatsapp" title="WhatsApp">
                            <i class="bi bi-whatsapp"></i>
                        </a>
                    </div>
                </div>

                <!-- Soporte Rápido -->
                <div class="soporte-rapido-card">
                    <h4 class="mb-3">Soporte Rápido</h4>
                    <p class="text-muted mb-3">¿Necesitas ayuda inmediata?</p>
                    <a href="#" class="btn btn-custom btn-outline-custom w-100 mb-2">
                        <i class="bi bi-chat-dots-fill me-2"></i>Chat en Vivo
                    </a>
                    <a href="https://wa.me/525555551234" target="_blank" class="btn btn-custom btn-success w-100">
                        <i class="bi bi-whatsapp me-2"></i>WhatsApp
                    </a>
                </div>

            </div>
        </div>

        <!-- Mapa (Opcional) -->
        <div class="row mt-5">
            <div class="col-12">
                <div class="mapa-card">
                    <h3 class="mb-4 text-center">Encuéntranos</h3>
                    <div class="mapa-placeholder">
                        <i class="bi bi-geo-alt-fill"></i>
                        <p>Mapa de ubicación</p>
                        <small class="text-muted">Av. Insurgentes Sur 1234, Col. Del Valle, CDMX</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- FAQ Rápido -->
        <div class="row mt-5">
            <div class="col-12">
                <div class="text-center mb-4">
                    <h3 class="section-title">Preguntas Frecuentes</h3>
                    <p class="section-subtitle">Encuentra respuestas rápidas a las dudas más comunes</p>
                </div>

                <div class="row g-4">
                    <div class="col-lg-6">
                        <div class="faq-quick-card">
                            <h5><i class="bi bi-question-circle-fill me-2"></i>¿Cuánto tiempo tarda la respuesta?</h5>
                            <p>Respondemos todos los mensajes en un máximo de 24 horas hábiles.</p>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="faq-quick-card">
                            <h5><i class="bi bi-question-circle-fill me-2"></i>¿Ofrecen demos gratuitas?</h5>
                            <p>Sí, ofrecemos demos personalizadas sin compromiso. Solicítala en el formulario.</p>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="faq-quick-card">
                            <h5><i class="bi bi-question-circle-fill me-2"></i>¿Tienen soporte técnico?</h5>
                            <p>Contamos con soporte técnico especializado por teléfono, email y chat.</p>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="faq-quick-card">
                            <h5><i class="bi bi-question-circle-fill me-2"></i>¿Puedo agendar una cita?</h5>
                            <p>Sí, menciona en tu mensaje que deseas agendar una cita y te contactaremos.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

<!-- Modal Aviso de Privacidad -->
<div class="modal fade" id="privacidadModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Aviso de Privacidad</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <h6>Responsable de la Protección de Datos</h6>
                <p>FacturaFácil.net, con domicilio en Av. Insurgentes Sur 1234, Col. Del Valle, CDMX, es responsable del tratamiento de sus datos personales.</p>

                <h6>Finalidad del Tratamiento</h6>
                <p>Los datos personales que recabamos serán utilizados para:</p>
                <ul>
                    <li>Atender sus solicitudes de información</li>
                    <li>Brindar soporte técnico</li>
                    <li>Procesar cotizaciones y ventas</li>
                    <li>Enviar información promocional (con su consentimiento)</li>
                </ul>

                <h6>Datos Recabados</h6>
                <p>Nombre, empresa, correo electrónico, teléfono y mensaje.</p>

                <h6>Derechos ARCO</h6>
                <p>Usted tiene derecho a Acceder, Rectificar, Cancelar u Oponerse al tratamiento de sus datos personales. Para ejercer estos derechos, contacte a: <a href="mailto:privacidad@facturafacil.net">privacidad@facturafacil.net</a></p>

                <h6>Cambios al Aviso de Privacidad</h6>
                <p>Nos reservamos el derecho de actualizar este aviso. Las modificaciones estarán disponibles en nuestro sitio web.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-custom btn-secondary-custom" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}